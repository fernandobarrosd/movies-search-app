<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.fragments.MovieInfoFragment"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="ui.fragments.MovieInfoFragment"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/movieInfo_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/moviePoster_imageView"
                android:layout_width="230dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/movieTitle_textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/movie_title_default_text"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/movieReleaseYear_textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/movie_release_year_default_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/movieSinopse_textView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/movie_sinopse_default_text"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/movieSkeleton_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="230dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:background="#F2305370"
                android:backgroundTint="#F2305370" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:background="#F2305370"
                android:backgroundTint="#F2305370" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:background="#F2305370"
                android:backgroundTint="#F2305370" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:background="#F2305370"
                android:backgroundTint="#F2305370" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>